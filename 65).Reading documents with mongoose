for reading the document we use the find() method
exports.get_all_tours= async (req,res)=>
{
  try{
      const tours =await Tour.find();
      res.status(200).json(
        {
          status:"true",
          data:
          {
            tours
          }
        })
      }
      catch(err)
      {
        res.status(400).json(
          {
            status:"false",
            data:
            {
              err
            }

          })
      }

  
}
